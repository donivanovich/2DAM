<Window x:Class="Spotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotify"
        DataContext="{StaticResource AppViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid 
            Grid.Row="1">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border 
                Grid.Column="0"
                Margin="5"
                Background="{StaticResource BrushSideBackground}"
                CornerRadius="15"
                Padding="10"
                BorderBrush="{StaticResource BrushSideBackground}"
                BorderThickness="2">
                
                <StackPanel 
                    x:Name="SideBarPlaylists">
                    
                    <TextBlock 
                        Text="Tu Biblioteca" 
                        Foreground="{StaticResource BrushTextSecondary}"
                        FontSize="16"
                        FontWeight="Bold"
                        Margin="5,0,0,0"/>
                    
                    <ListBox 
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="{StaticResource BrushTextPrimary}"
                        ItemsSource="{Binding ListPlaylists}">
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel 
                                    Orientation="Horizontal">
                                    
                                    <Image 
                                        Source="{Binding CoverUrl}"
                                        Width="40"
                                        Height="40"/>
                                    
                                    <StackPanel 
                                        Margin="2.5,0,0,0">
                                        
                                        <TextBlock 
                                            Text="{Binding Name}"/>
                                        
                                        <TextBlock 
                                            Text="{Binding Description}"
                                            Foreground="{StaticResource BrushTextSecondary}"/>
                                        
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
            <Frame 
                Grid.Column="1"
                x:Name="MainFrame"/>
            
            <Border 
                Grid.Column="2"
                Margin="5"
                Background="{StaticResource BrushSideBackground}"
                CornerRadius="15"
                Padding="10"
                BorderBrush="{StaticResource BrushSideBackground}"
                BorderThickness="2">
                
                <StackPanel 
                    x:Name="SideBarActualSong">
                    
                    <TextBlock 
                        Text="{Binding SelectedAlbum.Name}" 
                        Foreground="{StaticResource BrushTextPrimary}"
                        FontSize="12"
                        FontWeight="Bold"
                        Margin="0,0,0,10"/>
                    
                    <Image 
                        Source="{Binding SelectedAlbum.CoverUrl}"
                        Width="80"
                        Height="80"/>
                    
                    <TextBlock 
                        Text="{Binding SelectedTrack.Title}" 
                        Foreground="{StaticResource BrushTextPrimary}"
                        FontSize="12"
                        FontWeight="Bold"
                        Margin="0,0,0,5"/>
                    
                    <ItemsControl 
                        ItemsSource="{Binding SelectedTrack.Artists}">
                        
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left"/>
                                
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    FontSize="8"
                                    Text="{Binding Name}" 
                                    Foreground="{StaticResource BrushTextSecondary}"/>
                            
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <Image 
                        Source="{Binding SelectedArtist.ProfilePicUrl}"
                        Width="80"
                        Height="80">
                        
                        <Image.Clip>
                            <EllipseGeometry 
                                Center="40,40" 
                                RadiusX="40" 
                                RadiusY="40"/>
                            
                        </Image.Clip>
                        
                    </Image>
                    
                    <TextBlock 
                        Text="{Binding SelectedArtist.Name}" 
                        Foreground="{StaticResource BrushTextPrimary}"
                        FontSize="12"
                        FontWeight="Bold"
                        Margin="0,0,0,10"/>
                    
                </StackPanel>
            </Border>
        </Grid>

        <Grid 
            Grid.Row="2">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel 
                Orientation="Horizontal"
                Grid.Column="0">

                <StackPanel 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">

                    <Image 
                        Margin="20,0,20,0"
                        Source="{Binding SelectedAlbum.CoverUrl}"
                        Width="55"
                        Height="55"/>
                
                </StackPanel>

                <StackPanel 
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">

                    <TextBlock
                        Foreground="{StaticResource BrushTextPrimary}"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding SelectedTrack.Title}"/>
                
                    <ItemsControl 
                        ItemsSource="{Binding SelectedTrack.Artists}">
                        
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    FontSize="12"
                                    Text="{Binding Name}" 
                                    Foreground="{StaticResource BrushTextSecondary}"/>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="1">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,20,0,10">

                    <Button
                        Height="25"
                        Width="25"
                        Margin="0,0,10,0"/>
                    <Button
                        Height="25"
                        Width="25"/>
                    <Button
                        Height="25"
                        Width="25"
                        Margin="10,0,10,0"/>
                    <Button
                        Height="25"
                        Width="25"/>
                    <Button
                        Height="25"
                        Width="25"
                        Margin="10,0,0,0"/>

                </StackPanel>

                <StackPanel
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,20">
                    
                    <TextBlock
                        Foreground="{StaticResource BrushTextSecondary}"
                        FontSize="12"
                        Text="0:00"/>
                    
                    <Button
                        Margin="10,0,10,0"
                        Width="600"
                        Height="5">
                        
                    </Button>
                    <TextBlock
                        Foreground="{StaticResource BrushTextSecondary}"
                        FontSize="12"
                        Text="{Binding SelectedTrack.Duration}"/>
                    
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">

                <Button
                    Height="20"
                    Width="20"
                    Margin="0,0,10,0"/>
                <Button
                    Height="20"
                    Width="20"
                    Margin="0,0,10,0"/>
                <Button
                    Height="20"
                    Width="20"
                    Margin="0,0,10,0"/>
                <Button
                    Height="20"
                    Width="20"
                    Margin="0,0,10,0"/>
                <Button
                    Height="20"
                    Width="20"
                    Margin="0,0,5,0"/>
                <Button
                    Margin="0,0,10,0"
                    Width="100"
                    Height="6"/>
                <Button
                    Height="20"
                    Width="20"
                    Margin="0,0,10,0"/>
                <Button
                    Height="20"
                    Width="20"
                    Margin="0,0,10,0"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>