<Page x:Class="Wpf04_MiniBiblioteca.MVVM.View.Autores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf04_MiniBiblioteca.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autores">

    <Page.DataContext>
        <local:LibrosViewModel/>
    </Page.DataContext>

    <Grid>
        <ScrollViewer 
            VerticalScrollBarVisibility="Auto">
            <StackPanel
                Margin="20">
                <TextBlock 
                   Text="Lista de Autores"
                   VerticalAlignment="Center"
                   FontSize="20"
                   />
                <ListBox
                    ItemsSource="{Binding NombresAutoresUnicos}"
                    BorderThickness="0"
                    Background="#E8E8E8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="0, 5, 0, 0"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
