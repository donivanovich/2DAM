<Page x:Class="Wpf06_ProyectoLiga.MVVM.View.ClasificacionView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf06_ProyectoLiga"
      xmlns:VM="clr-namespace:Wpf06_ProyectoLiga.MVVM.ViewModel"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClasificacionView">

    <Page.DataContext>
        <VM:TablaLigaViewModel/>
    </Page.DataContext>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding CargarTablaCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <DataGrid ItemsSource="{Binding listaEquipos}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  BorderThickness="0"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  Margin="10,60,10,10"
                  Foreground="White"
                  Background="#FF1E1E2E"
                  >
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="#FF1E1E2E"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="POS" SortMemberPath="posicion">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding posicion}" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="EQUIPO" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        >
                                <Image Source="{Binding EscudoCompleto}" 
                                       Width="30" 
                                       Height="30"/>
                                <TextBlock Text="{Binding NOMBRE}"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="COLOR">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="16"
                                     Height="16"
                                     Fill="{Binding ColorCamisetaBrush}"
                                     Stroke="Gray"
                                     />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="PNTS" SortMemberPath="PUNTOS">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding PUNTOS}" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="P.J" SortMemberPath="N_PARTIDOS">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding posicion}" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="P.G" SortMemberPath="N_VICTORIAS">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding N_VICTORIAS}" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="P.P" SortMemberPath="N_DERROTAS">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding N_DERROTAS}" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="P.E" SortMemberPath="N_EMPATES">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding N_EMPATES}" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="G.F" SortMemberPath="G_FAVOR">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding G_FAVOR}" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="G.C" SortMemberPath="G_CONTRA">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding G_CONTRA}" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="DIF" SortMemberPath="DIF">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DIF}" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>



        </DataGrid>
    </Grid>
</Page>
