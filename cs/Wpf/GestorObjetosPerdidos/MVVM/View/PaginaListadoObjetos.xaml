<Page x:Class="GestorObjetosPerdidos.MVVM.View.PaginaListadoObjetos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:GestorObjetosPerdidos.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaginaListadoObjetos">

    <Page.DataContext>
        <vm:ObjetosPerdidosViewModel/>
    </Page.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="🔄 Cargar Datos" 
                        Command="{Binding CargarObjetosCommand}"
                        Margin="0,0,5,0"
                        Padding="15,8"
                        FontSize="14"/>
                <Button Content="➕ Agregar Objeto" 
                        Command="{Binding AgregarObjetoCommand}"
                        Padding="15,8"
                        FontSize="14"
                        Background="#4CAF50"
                        Foreground="White"/>
            </StackPanel>

            <ListView Grid.Row="1" 
                      ItemsSource="{Binding Objetos}"
                      SelectedItem="{Binding ObjetoSeleccionado}"
                      Margin="0,0,0,10"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Imagen" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ImagenPath}" 
                                           Width="40" Height="40"
                                           Stretch="UniformToFill"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Nombre" Width="120"
                                        DisplayMemberBinding="{Binding Nombre}"/>
                        <GridViewColumn Header="Categoría" Width="100"
                                        DisplayMemberBinding="{Binding Categoria}"/>
                        <GridViewColumn Header="Fecha" Width="130"
                                        DisplayMemberBinding="{Binding FechaHallazgo,
                                                   StringFormat=dd/MM/yyyy HH:mm}"/>
                        <GridViewColumn Header="Ubicación" Width="120"
                                        DisplayMemberBinding="{Binding UbicacionHallazgo}"/>
                        <GridViewColumn Header="Devuelto" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Devuelto}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <GroupBox Grid.Row="2" Header="Objetos devueltos">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ObjetosDevueltos}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,5"
                                        CornerRadius="4"
                                        BorderThickness="1"
                                        BorderBrush="#A5D6A7"
                                        Background="#E8F5E9"
                                        Padding="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Nombre}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Categoria}"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding FechaHallazgo,
                                                  StringFormat=dd/MM/yyyy}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <Border Grid.Column="1" 
                Background="#F5F5F5" 
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Margin="10,0,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding ObjetoSeleccionado.Nombre,
                                          StringFormat=Detalles: {0}}" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           VerticalAlignment="Center"/>
                
                <Image Grid.Row="1" 
                       Source="{Binding ObjetoSeleccionado.ImagenPath}"
                       Width="200" Height="200"
                       Stretch="Uniform"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="1" Margin="0,220,0,0">
                    <TextBlock Text="{Binding ObjetoSeleccionado.Categoria}"
                               FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ObjetoSeleccionado.UbicacionHallazgo}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ObjetoSeleccionado.FechaHallazgo,
                                     StringFormat=Encontrado: {0:dd/MM/yyyy HH:mm}}"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding ObjetoSeleccionado.Descripcion}"
                               TextWrapping="Wrap" Margin="0,0,0,20"/>
                </StackPanel>

                <Button Grid.Row="2"
                        Content="Marcar como devuelto"
                        Command="{Binding MarcarDevueltoCommand}"
                        IsEnabled="{Binding ObjetoSeleccionado}"
                        Padding="20,10"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Page>
