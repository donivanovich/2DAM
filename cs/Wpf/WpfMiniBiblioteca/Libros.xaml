<Page x:Class="WpfMiniBiblioteca.Libros"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMiniBiblioteca"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Libros">

    <Page.DataContext>
        <local:LibrosViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel
                Margin="20">
                <TextBlock 
                   Text="Lista de Libros"
                   VerticalAlignment="Center"
                   FontSize="20"
                   />
                <ListBox
                    x:Name="ListaCitasInterfaz"
                    ItemsSource="{Binding Libros}"
                    SelectedItem="{Binding LibroSeleccionado}"
                    BorderThickness="0"
                    Background="#E8E8E8"
                >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel 
                                Margin="10, 5, 10, 5" 
                                Orientation="Horizontal">
                                <Image 
                                    Source="{Binding Imagen}" 
                                    Width="65" 
                                    Height="90" 
                                    Margin="10, 10, 40, 10"/>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Titulo}" FontWeight="Bold" FontSize="14" Margin="0, 10, 0, 0"/>
                                    <TextBlock Text="{Binding Autor.Nombre}" Margin="0, 5, 0, 0"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Column="1"
            Margin="20"
            Background="#E8E8E8"
            >
            <TextBlock 
                Text="Detalle"
                FontSize="20"
                Background="White"
            />
            <Image 
                Source="{Binding LibroSeleccionado.Imagen}" 
                Width="150" 
                Height="195"
                Margin="0, 10, 0, 10"/>
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                >
                <TextBlock 
                    Text="{Binding LibroSeleccionado.Titulo, Mode=TwoWay}"
                    FontWeight="Bold"
                    MaxWidth="200"
                    TextWrapping="Wrap"
                    FontSize="16"
                />
            </StackPanel>
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                >
                <TextBlock 
                    Text="{Binding LibroSeleccionado.Autor.Nombre, Mode=TwoWay, StringFormat='Autor: {0}'}"
                    MaxWidth="200"
                    TextWrapping="Wrap"
                    FontSize="10"
                    Margin="0, 5, 0, 0"
                />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
