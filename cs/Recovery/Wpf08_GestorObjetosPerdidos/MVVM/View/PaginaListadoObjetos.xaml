<Page x:Class="Wpf08_GestorObjetosPerdidos.MVVM.View.PaginaListadoObjetos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf08_GestorObjetosPerdidos.MVVM.View"
      xmlns:vm="clr-namespace:Wpf08_GestorObjetosPerdidos.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaginaListadoObjetos">

    <Page.DataContext>
        <vm:ObjetosPerdidosViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Columna izquierda: Lista de objetos -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Botón cargar -->
            <Button Grid.Row="0" 
                    Content="🔄 Cargar Datos" 
                    Command="{Binding CargarObjetosCommand}"
                    Margin="0,0,0,10"
                    Padding="15,8"
                    FontSize="14"
                    HorizontalAlignment="Left"/>

            <!-- ListView de objetos -->
            <ListView Grid.Row="1" 
                      ItemsSource="{Binding Objetos}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nombre" Width="120" DisplayMemberBinding="{Binding Nombre}"/>
                        <GridViewColumn Header="Categoría" Width="100" DisplayMemberBinding="{Binding Categoria}"/>
                        <GridViewColumn Header="Fecha" Width="130" DisplayMemberBinding="{Binding FechaHallazgo, StringFormat=dd/MM/yyyy HH:mm}"/>
                        <GridViewColumn Header="Ubicación" Width="150" DisplayMemberBinding="{Binding UbicacionHallazgo}"/>
                        <GridViewColumn Header="Devuelto" Width="80" DisplayMemberBinding="{Binding Devuelto}"/>
                        <GridViewColumn Header="Descripción" Width="200" DisplayMemberBinding="{Binding Descripcion}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- Columna derecha: Información -->
        <Border Grid.Column="1" 
                Background="#F5F5F5" 
                Margin="10"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="📋 Gestor de Objetos Perdidos" 
                           FontSize="18" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="• Lista de objetos encontrados" 
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="• Carga automática desde datos.json" 
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="• Botón para recargar manualmente" 
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="• Columnas: Nombre, Categoría, Fecha, Ubicación, Estado" 
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
